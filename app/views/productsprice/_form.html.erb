<%= form_for( Productsprice.new, html: { class: "form-horizontal" }) do |f| %>
  
  f.hidden_field :product, @product
  <div class="form-group">
    <%= f.label :currency, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :currency, Currency.all.order(:description),:id,:description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
