<%= form_for(@management, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @management.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@management.errors.count, "error") %> prohibited this management from being saved:</h4>

      <ul>
      <% @management.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :product, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :product, Product.all.order(:description),:id,:description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :company, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :company, Company.all.order(:name),:id,:namePlusCnpj, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :currency, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :currency, Currency.all.order(:description),:id,:description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
